<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>Sport</servlet-name>
		<servlet-class>sport.SportServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Sport</servlet-name>
		<url-pattern>/sport</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>recherche</servlet-name>
		<servlet-class>sport.RechercheServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>recherche</servlet-name>
		<url-pattern>/recherche</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>accueil</servlet-name>
		<servlet-class>sport.AccueilServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>accueil</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>plan</servlet-name>
		<servlet-class>sport.PlanServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>plan</servlet-name>
		<url-pattern>/entrainement</url-pattern>
	</servlet-mapping>
	

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
